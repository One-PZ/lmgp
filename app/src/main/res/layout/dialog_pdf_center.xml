<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_pdf_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bgyellow">


        <TextView
            android:id="@+id/tv_title_pdf_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/bgyellow"
            android:text="PDF文件中心"
            android:textColor="#111"
            android:textStyle="bold"
            android:textSize="21sp" />

        <Button
            android:id="@+id/btn_close_pdf_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/bgyellow"
            android:text="关闭"
            android:textColor="@color/black" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgyellow"
        android:scrollbars="none"
        android:fillViewport="true" >

        <ListView
            android:id="@+id/lv_pdf_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@color/bgyellow"
            ></ListView>
    </ScrollView>



</LinearLayout>
